# Server Configuration
PORT=3000
HOST=0.0.0.0
NODE_ENV=development

# MongoDB Configuration
MONGO_URL=mongodb://user:password@localhost:27018
DB_NAME=invoice_service

# MinIO Configuration
# MinIO endpoint (default: http://minio:9000 for Docker, http://localhost:9000 for local development)
MINIO_ENDPOINT=http://minio:9000
# MinIO region (default: us-east-1)
MINIO_REGION=us-east-1
# MinIO access key (default: minio)
MINIO_ACCESS_KEY=minio
# MinIO secret key (default: minio123)
MINIO_SECRET_KEY=minio123
# MinIO bucket name for storing invoices (default: invoices)
MINIO_BUCKET=invoices

# MinIO Pre-signed URL Configuration
# Minimum URL validity in seconds (default: 60)
MINIO_URL_TTL_SEC_MIN=60
# Maximum URL validity in seconds (default: 3600 = 1 hour)
MINIO_URL_TTL_SEC_MAX=3600
# Default URL validity in seconds (default: 300 = 5 minutes)
MINIO_URL_TTL_SEC_DEFAULT=300

# RabbitMQ Configuration (for future event emission)
# RABBITMQ_URL=amqp://guest:guest@localhost:5672
# RABBITMQ_QUEUE_PREFIX=invoice_service

# Order Service Configuration (for checking order status)
# ORDER_SERVICE_URL=http://localhost:3001
# ORDER_SERVICE_API_KEY=your_api_key_here
